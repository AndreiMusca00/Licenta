<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookingApplication.Views.ChangePasswordPage" BackgroundColor="LightGray">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Entry Placeholder="Enter new password" IsPassword="True" Text="{Binding Password}"></Entry>
            <Entry Placeholder="Confirm new password" IsPassword="True" Text="{Binding Password2}"></Entry>
            <Button Text="Submit" Command="{Binding ChangePasswordCommand}" BackgroundColor="Gray" CornerRadius="30"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>