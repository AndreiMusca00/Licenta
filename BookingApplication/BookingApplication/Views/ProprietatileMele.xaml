<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookingApplication.Views.ProprietatileMele">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Adauga Proprietate"/>
            <ListView x:Name="listView" Margin="20" HasUnevenRows="True" >
            <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="5" Orientation="Horizontal" >
                                <Label Text="{Binding Nume}"></Label>
                                <StackLayout Padding="5">
                                    <Label Text="{Binding Judet}"/>
                                    <Label Text="{Binding Oras}"/>
                                    <Label Text="{Binding Strada}"/>
                                </StackLayout>
                                <Label Text="{Binding Pret}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>

                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>