<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookingApplication.TryImageUploadPage_">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Blue" Padding="24" CornerRadius="0">
                <Label Text="File upload sample" HorizontalTextAlignment="Center" TextColor="White"
                       FontSize="36"/>
            </Frame>
            <Label x:Name="StatusLabel" Text="Upload status" FontSize="Title" 
                   Padding="30,10,30,10"/>
            <Button Text="Pick and Upload" Clicked="Button_Clicked"/>
            <Button Text="Show image" Clicked="Button_Clicked_1"></Button>
            <Image x:Name="imagineaDisplay" HeightRequest="100"  Background="blue"></Image>
            <Label x:Name="testLabel" Text="incercare"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>